generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  REQUESTER
  AGENT
  ADMIN
}

enum TicketStatus {
  NOWE
  W_TOKU
  OCZEKUJE_NA_UZYTKOWNIKA
  WSTRZYMANE
  ROZWIAZANE
  ZAMKNIETE
  PONOWNIE_OTWARTE
}

enum TicketPriority {
  NISKI
  SREDNI
  WYSOKI
  KRYTYCZNY
}

enum AttachmentVisibility {
  INTERNAL
  PUBLIC
}

model Organization {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     User[]
  teams     Team[]
  tickets   Ticket[]
  tags      Tag[]
  categories Category[]
  slaPolicy SlaPolicy[]
}

model User {
  id             String      @id @default(uuid())
  email          String      @unique
  name           String
  passwordHash   String
  emailVerified  DateTime?
  role           Role
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  ticketsCreated Ticket[]     @relation("TicketRequester")
  ticketsOwned   Ticket[]     @relation("TicketAssigneeUser")
  comments       Comment[]
  attachments    Attachment[]
  auditEvents    AuditEvent[]
  memberships    TeamMembership[]
  accounts       Account[]
  sessions       Session[]
  notificationPreference NotificationPreference?
}

model Team {
  id             String           @id @default(uuid())
  name           String
  organizationId String
  organization   Organization     @relation(fields: [organizationId], references: [id])
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  memberships    TeamMembership[]
  tickets        Ticket[]         @relation("TicketAssigneeTeam")

  @@unique([organizationId, name])
}

model TeamMembership {
  userId String
  teamId String

  user User @relation(fields: [userId], references: [id])
  team Team @relation(fields: [teamId], references: [id])

  assignedAt DateTime @default(now())

  @@id([userId, teamId])
}

model Ticket {
  id               String         @id @default(uuid())
  number           Int            @default(autoincrement())
  title            String
  descriptionMd    String
  status           TicketStatus   @default(NOWE)
  priority         TicketPriority @default(SREDNI)
  category         String?
  requesterId      String
  requester        User           @relation("TicketRequester", fields: [requesterId], references: [id])
  assigneeUserId   String?
  assigneeUser     User?          @relation("TicketAssigneeUser", fields: [assigneeUserId], references: [id])
  assigneeTeamId   String?
  assigneeTeam     Team?          @relation("TicketAssigneeTeam", fields: [assigneeTeamId], references: [id])
  organizationId   String
  organization     Organization   @relation(fields: [organizationId], references: [id])
  tags             TicketTag[]
  comments         Comment[]
  attachments      Attachment[]
  auditEvents      AuditEvent[]
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  resolvedAt       DateTime?
  closedAt         DateTime?
  firstResponseAt  DateTime?
  firstResponseDue DateTime?
  resolveDue       DateTime?
  slaPausedAt      DateTime?
  slaResumedAt     DateTime?
  slaPauseTotalSeconds Int    @default(0)

  @@index([organizationId, title, descriptionMd, category], name: "Ticket_search_idx")
}

model Comment {
  id        String   @id @default(uuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  isInternal Boolean @default(false)
  bodyMd    String
  createdAt DateTime @default(now())
}

model Attachment {
  id         String   @id @default(uuid())
  ticketId   String
  ticket     Ticket   @relation(fields: [ticketId], references: [id])
  uploaderId String
  uploader   User     @relation(fields: [uploaderId], references: [id])
  fileName   String
  filePath   String
  mimeType   String
  sizeBytes  Int
  visibility AttachmentVisibility @default(INTERNAL)
  metadata   Json?
  createdAt  DateTime @default(now())
}

model Tag {
  id             String   @id @default(uuid())
  name           String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  tickets TicketTag[]

  @@unique([organizationId, name])
}

model Category {
  id             String   @id @default(uuid())
  name           String
  description    String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  slaPolicies    SlaPolicy[] @relation("CategorySlaPolicies")

  @@unique([organizationId, name])
}

model TicketTag {
  ticketId String
  tagId    String

  ticket Ticket @relation(fields: [ticketId], references: [id])
  tag    Tag    @relation(fields: [tagId], references: [id])

  @@id([ticketId, tagId])
}

model AuditEvent {
  id        String   @id @default(uuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
  actorId   String
  actor     User     @relation(fields: [actorId], references: [id])
  action    String
  data      Json?
  createdAt DateTime @default(now())
}

model SlaPolicy {
  id                  String         @id @default(uuid())
  organizationId      String
  organization        Organization   @relation(fields: [organizationId], references: [id])
  priority            TicketPriority
  categoryId          String?
  category            Category?      @relation("CategorySlaPolicies", fields: [categoryId], references: [id])
  firstResponseHours  Int
  resolveHours        Int
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt

  @@unique([organizationId, priority, categoryId])
}

model NotificationPreference {
  id                  String   @id @default(uuid())
  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id])
  emailTicketUpdates  Boolean  @default(true)
  emailCommentUpdates Boolean  @default(true)
  inAppTicketUpdates  Boolean  @default(true)
  inAppCommentUpdates Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// NextAuth adapter models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  oauth_token_secret String?
  oauth_token       String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
