# Core application secrets (no real secrets; replace in .env.local)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/serwisdesk
NEXTAUTH_SECRET=change-me-in-local
# Required by NextAuth in non-development hosts; keep aligned with deployment URL
NEXTAUTH_URL=http://localhost:3000

# Email delivery (optional - defaults to stub if not configured)
# Set EMAIL_ENABLED=true to enable real email delivery via SMTP
EMAIL_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@helpdesk.local
